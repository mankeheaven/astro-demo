---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | 简化版布局</title>
	</head>
	<body class="flex flex-col min-h-screen bg-gray-100 dark:bg-gray-900">
		<header class="bg-green-700 text-white p-3">
			<div class="container mx-auto">
				<div class="flex justify-between items-center">
					<div class="font-bold text-xl">简化版布局</div>
					<nav>
						<a href="/" class="text-white hover:text-green-200 mr-4">返回首页</a>
					</nav>
				</div>
			</div>
		</header>

		<main class="flex-grow container mx-auto p-4">
			<slot />
		</main>

		<footer class="bg-green-800 text-white p-3">
			<div class="container mx-auto text-center text-sm">
				<p>© {new Date().getFullYear()} 简化版布局 | <a href="/about" class="underline">关于</a></p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
</style> 